---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// Achievements data from submitted certificates
const achievements = [
  {
    title: "Contributor • GirlScript Summer of Code",
    description: "Open source contribution program focused on learning, growth within the tech community, and making an impact on society",
    institution: "GirlScript Foundation",
    date: "Aug 2025 - Present · 1 mo",
    category: "certificates"
  },
  {
    title: "Certificate of Participation • C Code Meet 2024",
    description: "Actively participated in the 24-hour hackathon conducted at Srinivas University Institute of Engineering & Technology, Mukka",
    institution: "Srinivas University Institute of Engineering & Technology",
    date: "October 20, 2024",
    category: "hackathons"
  },
  {
    title: "Certificate of Participation • Bug Hunt",
    description: "Successfully participated in Bug Hunt event demonstrating problem-solving and debugging skills",
    institution: "Srinivas Institute of Technology",
    date: "November 15, 2024",
    category: "certificates"
  },
  {
    title: "Certificate of Achievement • SRINATHON",
    description: "24 Hours National Level Hackathon - Active participation and dedication in the success of the hackathon",
    institution: "Srinivas Institute of Technology",
    date: "December 10-11, 2024",
    category: "hackathons"
  },
  {
    title: "Certificate of Participation • REVA Startup Summit 2024",
    description: "Attended and participated in the REVA Startup Summit - 2024 integrating startup ecosystem",
    institution: "REVA University",
    date: "December 05, 2024",
    category: "certificates"
  },
  {
    title: "Certificate of Virtual Internship • Android Developer",
    description: "Successfully completed 10 weeks Android Developer Virtual Internship supported by India Edu Program and Google for Developers",
    institution: "AICTE - EduSkills",
    date: "October - December 2024",
    category: "internships"
  },
  {
    title: "Certificate of Participation • Build With India",
    description: "Placed among the top 5,000 teams out of 25,000 participating teams in BuildwithIndia (Finale at Google Office)",
    institution: "Hack With India",
    date: "2024",
    category: "hackathons"
  },
  {
    title: "Certificate of Merit • Shark Tank",
    description: "Secured 2nd place in Shark Tank event during ENVISION 2025, a National Level Techno Cultural Fest",
    institution: "Srinivas Institute of Technology",
    date: "May 7-8, 2025",
    category: "certificates"
  },
  {
    title: "Certificate of Participation • Solution Challenge",
    description: "GDG on Campus Solution Challenge - Dedication to learning, growth within the tech community, and making an impact on society",
    institution: "Google Developer Groups On Campus",
    date: "2025",
    category: "certificates"
  }
];
---

<Layout title="Achievements - Nikhil Bajantri">
  <Navigation />
  <main class="pt-10">
    <section id="achievements" class="py-12 sm:py-16 bg-dark-bg min-h-screen">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-text-primary mb-4">
            <span class="text-neon-cyan">Achievements</span>
          </h1>
          <div class="w-24 sm:w-32 h-1 bg-neon-cyan mx-auto mb-6"></div>
          <p class="text-text-secondary text-lg max-w-2xl mx-auto">
            A collection of certificates, awards, and recognitions from hackathons, competitions, and professional development programs
          </p>
        </div>

        <!-- Navigation -->
        <div class="flex justify-center mb-8">
          <nav class="flex space-x-1 bg-dark-card border border-dark-border rounded-lg p-1">
            <button class="nav-btn active px-4 py-2 rounded-md text-sm font-medium transition-colors duration-300" data-category="all">
              All
            </button>
            <button class="nav-btn px-4 py-2 rounded-md text-sm font-medium transition-colors duration-300" data-category="hackathons">
              Hackathons
            </button>
            <button class="nav-btn px-4 py-2 rounded-md text-sm font-medium transition-colors duration-300" data-category="certificates">
              Certificates
            </button>
            <button class="nav-btn px-4 py-2 rounded-md text-sm font-medium transition-colors duration-300" data-category="internships">
              Internships
            </button>
          </nav>
        </div>

        <!-- Achievements List -->
        <div class="space-y-8">
          {achievements.map((achievement, index) => (
            <div class="group achievement-item" data-category={achievement.category}>
              <div class="bg-dark-card border border-dark-border rounded-lg p-6 hover:border-neon-cyan transition-all duration-300 hover:shadow-lg hover:shadow-neon-cyan/10">
                <!-- Title -->
                <h3 class="text-text-primary font-bold text-xl mb-3 group-hover:text-neon-cyan transition-colors duration-300">
                  {achievement.title}
                </h3>
                
                <!-- Description -->
                <p class="text-text-secondary text-base leading-relaxed mb-3">
                  {achievement.description}
                </p>
                
                <!-- Institution and Date -->
                <div class="flex flex-wrap items-center gap-4 text-text-secondary text-sm">
                  <span>{achievement.institution}</span>
                  <span>•</span>
                  <span>{achievement.date}</span>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Back to Home -->
        <div class="text-center mt-12">
          <a href="/" class="inline-flex items-center text-neon-cyan hover:text-neon-cyan/80 transition-colors duration-300 text-lg font-medium">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Home
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* Navigation styles */
  .nav-btn {
    color: #6b7280;
    transition: all 0.3s ease;
  }
  
  .nav-btn:hover {
    color: #00ffff;
  }
  
  .nav-btn.active {
    background-color: #00ffff;
    color: #000;
  }
  
  /* Achievement filtering */
  .achievement-item {
    transition: all 0.3s ease;
  }
  
  .achievement-item.hidden {
    display: none;
  }
  
  /* Simple hover effects */
  .group:hover h3 {
    color: #00ffff;
  }
  
  /* Smooth transitions */
  .group h3 {
    transition: color 0.3s ease;
  }
</style>

<script>
  // Navigation functionality
  const navBtns = document.querySelectorAll('.nav-btn');
  const achievementItems = document.querySelectorAll('.achievement-item');

  navBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const category = btn.getAttribute('data-category');
      
      // Update active button
      navBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      // Filter achievements
      achievementItems.forEach(item => {
        const itemCategory = item.getAttribute('data-category');
        
        if (category === 'all' || itemCategory === category) {
          item.classList.remove('hidden');
        } else {
          item.classList.add('hidden');
        }
      });
    });
  });
</script>
