---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const blogPosts = [
  {
    title: "From Curiosity to Code: My Journey Into the World of Computers",
    excerpt: "Every journey begins with a spark of curiosity. Mine started when I was in 3rd standardâ€”a time when computers weren't in every household, and just owning one felt like a luxury.",
    date: "August 20, 2025",
    tags: ["techjourney", "personalgrowth", "computerscience", "inspiration"],
    featured: true,
    mediumUrl: "https://medium.com/@nikhilbajantri86/from-curiosity-to-code-my-journey-into-the-world-of-computers-3e09811c80a1",
    devUrl: "https://dev.to/programmernick234/from-curiosity-to-code-my-journey-into-the-world-of-computers-1ham"
  }
];
---

<Layout title="Blog - Nikhil Bajantri" description="Sharing my thoughts, learnings and experiences through writing">
  <Navigation />
  <main class="pt-16">
    <section class="py-12 bg-dark-bg">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-12">
          <div class="inline-flex items-center space-x-2 mb-4">
            <div class="w-8 h-8 bg-gradient-to-br from-neon-cyan to-neon-purple rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h1 class="text-3xl sm:text-4xl font-bold text-text-primary">
              <span class="bg-gradient-to-r from-neon-cyan to-neon-purple bg-clip-text text-transparent">Blog</span>
            </h1>
          </div>
          <div class="w-20 h-1 bg-gradient-to-r from-neon-cyan to-neon-purple mx-auto mb-4"></div>
          <p class="text-text-secondary text-lg max-w-2xl mx-auto">
            Sharing my thoughts, learnings and experiences through writing
          </p>
        </div>

        <!-- Featured Post -->
        <div class="mb-12">
          <div class="group relative">
            <!-- Background Glow Effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-neon-cyan/10 to-neon-purple/10 rounded-xl blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <!-- Main Card -->
            <div class="relative bg-dark-card border border-dark-border rounded-xl overflow-hidden hover:border-neon-cyan transition-all duration-500 hover:shadow-xl hover:shadow-neon-cyan/20">
              <div class="md:flex">
                <!-- Left Section - Visual -->
                <div class="md:w-1/3 relative overflow-hidden">
                  <div class="absolute inset-0 bg-gradient-to-br from-green-500 via-green-600 to-emerald-700"></div>
                  <div class="absolute inset-0 bg-gradient-to-br from-transparent via-black/20 to-black/40"></div>
                  
                  <!-- Animated Background Pattern -->
                  <div class="absolute inset-0 opacity-20">
                    <div class="absolute top-2 left-2 w-1 h-1 bg-white rounded-full animate-pulse"></div>
                    <div class="absolute top-6 right-4 w-0.5 h-0.5 bg-white rounded-full animate-pulse delay-100"></div>
                    <div class="absolute bottom-4 left-6 w-1 h-1 bg-white rounded-full animate-pulse delay-200"></div>
                  </div>
                  
                  <div class="relative h-full flex items-center justify-center p-6">
                    <div class="text-center">
                      <!-- Main Icon -->
                      <div class="relative mb-4">
                        <div class="w-20 h-20 bg-white/10 backdrop-blur-sm rounded-full flex items-center justify-center border border-white/20">
                          <svg class="w-10 h-10 text-white" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                          </svg>
                        </div>
                        <!-- Featured Star -->
                        <div class="absolute -top-1 -right-1">
                          <div class="w-6 h-6 bg-gradient-to-br from-orange-400 to-red-500 rounded-full flex items-center justify-center shadow-lg">
                            <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                          </div>
                        </div>
                      </div>
                      
                      <!-- Decorative Text -->
                      <div class="text-white/80 text-xs font-medium tracking-wider uppercase">
                        Featured Article
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Right Section - Content -->
                <div class="md:w-2/3 p-6">
                  <div class="h-full flex flex-col justify-between">
                    <div>
                      <!-- Title -->
                      <h3 class="text-xl md:text-2xl font-bold text-text-primary mb-4 leading-tight group-hover:text-neon-cyan transition-colors duration-300">
                        {blogPosts[0].title}
                      </h3>
                      
                      <!-- Date and Tags -->
                      <div class="flex flex-wrap items-center gap-3 mb-4">
                        <div class="flex items-center space-x-2 text-text-secondary">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                          </svg>
                          <span class="text-xs font-medium">{blogPosts[0].date}</span>
                        </div>
                        
                        <div class="flex flex-wrap gap-1">
                          {blogPosts[0].tags.map((tag) => (
                            <span class="px-2 py-0.5 bg-dark-bg border border-dark-border rounded-full text-xs text-text-secondary hover:border-neon-cyan hover:text-neon-cyan hover:bg-neon-cyan/10 transition-all duration-300 font-medium">
                              #{tag}
                            </span>
                          ))}
                        </div>
                      </div>
                      
                      <!-- Excerpt -->
                      <p class="text-text-secondary text-sm leading-relaxed mb-6">
                        {blogPosts[0].excerpt}
                      </p>
                    </div>

                    <!-- Platform Links -->
                    <div class="space-y-3">
                      <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-2 sm:space-y-0 sm:space-x-4">
                        <a 
                          href={blogPosts[0].mediumUrl} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="group/link flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-orange-500 to-red-500 rounded-lg text-white font-medium hover:from-orange-600 hover:to-red-600 transition-all duration-300 transform hover:scale-105 hover:shadow-lg text-sm"
                        >
                          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42 3.38 2.88 3.38 6.42M24 12c0 3.17-.53 5.75-1.19 5.75-.66 0-1.19-2.58-1.19-5.75s.53-5.75 1.19-5.75C23.47 6.25 24 8.83 24 12z"/>
                          </svg>
                          <span>Read on Medium</span>
                          <svg class="w-3 h-3 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                          </svg>
                        </a>
                        
                        <a 
                          href={blogPosts[0].devUrl} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="group/link flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg text-white font-medium hover:from-blue-600 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 hover:shadow-lg text-sm"
                        >
                          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M7.42 10.05c-.18-.16-.46-.23-.84-.23H6l.02 2.44.04 2.45h.65c.38 0 .66-.08.84-.23.19-.15.28-.38.28-.7 0-.32-.09-.55-.28-.7zM0 4.94v14.12h24V4.94H0zM8.56 15.3c-.44.58-1.06.88-1.86.88-.8 0-1.42-.3-1.86-.88-.46-.58-.69-1.34-.69-2.2 0-.86.23-1.62.69-2.2.44-.58 1.06-.88 1.86-.88.8 0 1.42.3 1.86.88.46.58.69 1.34.69 2.2 0 .86-.23 1.62-.69 2.2zm3.85-1.73c0 .32-.09.55-.28.7-.18.16-.46.23-.84.23h-.65l-.04-2.45-.02-2.44h.65c.38 0 .66.08.84.23.19.15.28.38.28.7zm6.39-3.92c-.18-.16-.46-.23-.84-.23h-.65l-.02 2.44-.04 2.45h.65c.38 0 .66-.08.84-.23.19-.15.28-.38.28-.7 0-.32-.09-.55-.28-.7z"/>
                          </svg>
                          <span>Read on Dev.to</span>
                          <svg class="w-3 h-3 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                          </svg>
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- More Posts Coming Soon -->
        <div class="text-center">
          <div class="group relative">
            <!-- Background Glow Effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-neon-purple/10 to-neon-cyan/10 rounded-xl blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <!-- Main Card -->
            <div class="relative bg-dark-card border border-dark-border rounded-xl p-8 hover:border-neon-purple transition-all duration-500 hover:shadow-xl hover:shadow-neon-purple/20">
              <div class="max-w-xl mx-auto">
                <!-- Icon -->
                <div class="w-12 h-12 bg-gradient-to-br from-neon-purple to-neon-cyan rounded-full flex items-center justify-center mx-auto mb-6">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                
                <h3 class="text-xl font-bold text-text-primary mb-3">
                  More Posts Coming Soon
                </h3>
                <p class="text-text-secondary text-sm mb-6 leading-relaxed">
                  I'm working on more articles about web development, programming, and my journey in tech. Follow me to stay updated!
                </p>
                
                <div class="flex flex-col sm:flex-row justify-center items-center space-y-2 sm:space-y-0 sm:space-x-4">
                  <a 
                    href="https://medium.com/@nikhilbajantri86" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group/link flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-orange-500 to-red-500 rounded-lg text-white font-medium hover:from-orange-600 hover:to-red-600 transition-all duration-300 transform hover:scale-105 hover:shadow-lg text-sm"
                  >
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42 3.38 2.88 3.38 6.42M24 12c0 3.17-.53 5.75-1.19 5.75-.66 0-1.19-2.58-1.19-5.75s.53-5.75 1.19-5.75C23.47 6.25 24 8.83 24 12z"/>
                    </svg>
                    <span>Follow on Medium</span>
                    <svg class="w-3 h-3 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                    </svg>
                  </a>
                  
                  <a 
                    href="https://dev.to/programmernick234" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="group/link flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg text-white font-medium hover:from-blue-600 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 hover:shadow-lg text-sm"
                  >
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M7.42 10.05c-.18-.16-.46-.23-.84-.23H6l.02 2.44.04 2.45h.65c.38 0 .66-.08.84-.23.19-.15.28-.38.28-.7 0-.32-.09-.55-.28-.7zM0 4.94v14.12h24V4.94H0zM8.56 15.3c-.44.58-1.06.88-1.86.88-.8 0-1.42-.3-1.86-.88-.46-.58-.69-1.34-.69-2.2 0-.86.23-1.62.69-2.2.44-.58 1.06-.88 1.86-.88.8 0 1.42.3 1.86.88.46.58.69 1.34.69 2.2 0 .86-.23 1.62-.69 2.2zm3.85-1.73c0 .32-.09.55-.28.7-.18.16-.46.23-.84.23h-.65l-.04-2.45-.02-2.44h.65c.38 0 .66.08.84.23.19.15.28.38.28.7zm6.39-3.92c-.18-.16-.46-.23-.84-.23h-.65l-.02 2.44-.04 2.45h.65c.38 0 .66-.08.84-.23.19-.15.28-.38.28-.7 0-.32-.09-.55-.28-.7z"/>
                    </svg>
                    <span>Follow on Dev.to</span>
                    <svg class="w-3 h-3 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* Smooth transitions */
  .group:hover h3 {
    color: #00ffff;
  }
  
  .group h3 {
    transition: color 0.3s ease;
  }
  
  /* Animation delays */
  .delay-100 {
    animation-delay: 100ms;
  }
  
  .delay-200 {
    animation-delay: 200ms;
  }
</style>
