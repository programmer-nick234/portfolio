                  <!-- Icon -->
                  <div class={`text-xl sm:text-2xl ${skill.color} mb-2`}>
                    <i class={skill.icon}></i>
                  </div>
                  
                  <!-- Skill Name -->
                  <h4 class="text-text-primary font-medium text-xs sm:text-sm group-hover:text-neon-cyan transition-colors duration-300">
                    {skill.name}
                  </h4>
                  
