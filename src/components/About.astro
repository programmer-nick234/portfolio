---
// About section component
---

<section id="about" class="min-h-screen bg-dark-bg flex items-center">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Content Section -->
      <div class="space-y-8">
        <div>
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-text-primary mb-6 leading-tight">
            Nikhil Bajantri
          </h1>
          <p class="text-text-secondary leading-relaxed text-xl mb-8">
            Turning concepts into code — from sleek UIs to scalable backends. A full-stack developer who loves learning, building, and pushing boundaries.
          </p>
        </div>

         <div class="space-y-4">
            <div class="flex items-center space-x-2">
              <span class="text-text-primary font-medium">Full-Stack Developer & CTO at</span>
              <span class="text-neon-cyan font-semibold">DailyDine</span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="text-text-primary">Building products & exploring tech</span>
              <span class="text-2xl">⚡</span>
            </div>
          </div>
          

        <!-- Social Links -->
        <div class="flex items-center space-x-6 pt-6">
          <a
            href="#"
            class="text-text-secondary hover:text-text-primary transition-colors duration-300 text-2xl"
            title="GitHub"
          >
            <i class="fab fa-github"></i>
          </a>
          <a
            href="#"
            class="text-text-secondary hover:text-text-primary transition-colors duration-300 text-2xl"
            title="LinkedIn"
          >
            <i class="fab fa-linkedin"></i>
          </a>
          <a
            href="#"
            class="text-text-secondary hover:text-text-primary transition-colors duration-300 text-2xl"
            title="Twitter"
          >
            <i class="fab fa-twitter"></i>
          </a>
          
          <!-- Resume Button -->
          <a
            href="#"
            class="ml-8 bg-gray-700 hover:bg-gray-600 text-text-primary px-6 py-3 rounded-lg font-medium transition-all duration-300 flex items-center space-x-2"
          >
            <span>Resume</span>
            <i class="fas fa-download"></i>
          </a>
        </div>
      </div>

      <!-- Photo Section -->
      <div class="relative lg:order-2">
        <div class="relative w-full max-w-lg mx-auto">          
          <!-- Photo container -->
          <div class="relative w-full aspect-square rounded-3xl overflow-hidden border-4 border-gray-700 shadow-2xl">
            <img
              src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=500&h=500&fit=crop&crop=face"
              alt="Deveesh Shetty - Developer"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
