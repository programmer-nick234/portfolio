            style="background: linear-gradient(135deg, #00f5ff, #a855f7); animation: morph 8s ease-in-out infinite;"
          >
          </div>

          <!-- Profile image with tilt effect -->
          <div
            id="profile-tilt"
            class="relative w-full h-full rounded-full overflow-hidden border-2 border-white/10 shadow-[0_0_40px_rgba(0,245,255,0.1)]"
            style="transform-style: preserve-3d;"
          >
            <img
              src="/profile-image.jpg"
              alt="Nikhil Bajantri - Full Stack Developer"
              class="w-full h-full object-cover"
              loading="eager"
              width="420"
              height="420"
            />
            <!-- Overlay gradient -->
            <div
              class="absolute inset-0 bg-gradient-to-t from-[#050505]/40 via-transparent to-transparent"
            >
            </div>
          </div>

          <!-- Floating tech badges -->
          <div
            class="absolute -right-2 top-[20%] px-3 py-1.5 rounded-lg glass text-xs font-medium text-[#00f5ff] shadow-lg animate-float"
            style="animation-delay: 0s;"
          >
            <i class="fab fa-react mr-1"></i> React
          </div>
          <div
            class="absolute -left-4 top-[60%] px-3 py-1.5 rounded-lg glass text-xs font-medium text-[#a855f7] shadow-lg animate-float"
            style="animation-delay: -2s;"
          >
            <i class="fab fa-python mr-1"></i> Python
          </div>
          <div
            class="absolute right-4 bottom-[5%] px-3 py-1.5 rounded-lg glass text-xs font-medium text-[#22d3ee] shadow-lg animate-float"
            style="animation-delay: -4s;"
          >
            <i class="fas fa-brain mr-1"></i> AI/ML
