---
// About section component
---

<section id="about" class="min-h-screen bg-dark-bg flex items-center">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Content Section -->
      <div class="space-y-6">
        <div>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-text-primary mb-6 leading-tight">
            Nikhil Bajantri
          </h1>
          <p class="text-text-secondary leading-relaxed text-lg mb-8 max-w-lg">
            Turning concepts into code — from sleek UIs to scalable backends. A full-stack developer who loves learning, building, and pushing boundaries.
          </p>
        </div>
        
         <div class="space-y-4">
            <div class="flex items-center space-x-2">
              <span class="text-text-primary font-medium text-lg">Full-Stack Developer & CTO at</span>
              <span class="text-neon-cyan font-semibold text-lg">DailyDine</span>
            </div>
            <div class="flex items-center space-x-2">
              <span class="text-text-primary text-lg">Building products & exploring tech</span>
              <span class="text-2xl">⚡</span>
            </div>
          </div>
          

        <!-- Social Links -->
        <div class="flex items-center space-x-8 pt-6">
          <a
            href="https://github.com/programmer-nick234/"
            class="text-text-secondary hover:text-text-primary transition-colors duration-300 text-3xl"
            title="GitHub"
            target="_blank"
            rel="noopener noreferrer"
          >
            <i class="fab fa-github"></i>
          </a>
          <a
            href="https://www.linkedin.com/in/nikhil-bajantri-dev"
            class="text-text-secondary hover:text-text-primary transition-colors duration-300 text-3xl"
            title="LinkedIn"
            target="_blank"
            rel="noopener noreferrer"
          >
            <i class="fab fa-linkedin"></i>
          </a>
          <a
            href="https://x.com/nikkkkhil_2604"
            class="text-text-secondary hover:text-text-primary transition-colors duration-300 text-3xl x-icon"
            title="X (Twitter)"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          
          <!-- Resume Button -->
          <a
            href="/resume.pdf"
            download="Nikhil_Bajantri_Resume.pdf"
            class="ml-8 bg-gradient-to-r from-green-500 to-teal-500 hover:from-green-600 hover:to-teal-600 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 flex items-center space-x-3 shadow-lg hover:shadow-xl transform hover:scale-105"
            onclick="return confirm('Download resume?')"
          >
            <span>Resume</span>
            <i class="fas fa-download"></i>
          </a>
        </div>
      </div>

      <!-- Photo Section -->
      <div class="relative lg:order-2 flex justify-center">
        <div class="relative w-full max-w-lg mx-auto">          
          <!-- Photo container -->
          <div class="relative w-full aspect-square rounded-3xl overflow-hidden border-4 border-gray-700 shadow-2xl">
            <img
              src="/profile-image.jpg"
              alt="Nikhil Bajantri - Developer"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
