      <!-- Right: Profile Image -->
      <div
        class="relative order-1 lg:order-2 flex justify-center lg:justify-end"
        data-animate="scale"
        data-animate-delay="0.3"
      >
        <div
          class="relative w-64 h-64 sm:w-80 sm:h-80 lg:w-[420px] lg:h-[420px]"
        >
          <!-- Orbiting ring 1 -->
          <div
            class="absolute inset-[-10px] rounded-full border border-[#00f5ff]/10 animate-[spin_20s_linear_infinite]"
          >
            <div
              class="absolute top-0 left-1/2 -translate-x-1/2 w-2 h-2 rounded-full bg-[#00f5ff] shadow-[0_0_10px_rgba(0,245,255,0.5)]"
            >
            </div>
          </div>

          <!-- Orbiting ring 2 -->
          <div
            class="absolute inset-[-24px] rounded-full border border-[#a855f7]/8 animate-[spin_30s_linear_infinite_reverse]"
          >
