---
// Contact section â€” Split layout with animated form
---

<section id="contact" class="relative py-20 sm:py-28 overflow-hidden">
  <!-- Section divider -->
  <div
    class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[#a855f7]/20 to-transparent"
  >
  </div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
    <!-- Section Header -->
    <div class="text-center mb-16 sm:mb-20" data-animate="fade-up">
      <span
        class="inline-block text-xs uppercase tracking-[0.3em] text-[#a855f7] mb-4 font-medium"
        >Get In Touch</span
      >
      <h2 class="section-title text-[#f0f0f0] mb-4">
        Let's <span class="gradient-text-alt">Connect</span>
      </h2>
      <p class="section-subtitle mx-auto">
        Have a project idea or just want to say hello? I'd love to hear from
        you.
      </p>
    </div>

    <!-- Split Layout -->
    <div
      class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-12 max-w-5xl mx-auto"
    >
      <!-- Left: Contact Info -->
      <div class="lg:col-span-2 space-y-6" data-animate="fade-right">
        <!-- Contact methods -->
        <div class="space-y-4">
          <a
            href="mailto:nikhilbajantri2604@gmail.com"
            class="group flex items-center gap-4 glass-card rounded-xl p-4 hover:scale-[1.02] transition-all duration-500"
          >
            <div
              class="w-10 h-10 rounded-xl bg-[#00f5ff]/10 border border-[#00f5ff]/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-500"
            >
              <i class="fas fa-envelope text-[#00f5ff] text-sm"></i>
            </div>
            <div>
              <div class="text-xs text-[#555] mb-0.5">Email</div>
              <div
                class="text-sm text-[#f0f0f0] font-medium group-hover:text-[#00f5ff] transition-colors"
              >
                nikhilbajantri2604@gmail.com
              </div>
            </div>
          </a>

          <a
            href="https://www.linkedin.com/in/nikhil-bajantri-dev"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-4 glass-card rounded-xl p-4 hover:scale-[1.02] transition-all duration-500"
          >
            <div
              class="w-10 h-10 rounded-xl bg-[#0077b5]/10 border border-[#0077b5]/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-500"
            >
              <i class="fab fa-linkedin-in text-[#0077b5] text-sm"></i>
            </div>
            <div>
              <div class="text-xs text-[#555] mb-0.5">LinkedIn</div>
              <div
                class="text-sm text-[#f0f0f0] font-medium group-hover:text-[#0077b5] transition-colors"
              >
                nikhil-bajantri-dev
              </div>
            </div>
          </a>

          <a
            href="https://github.com/programmer-nick234/"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-4 glass-card rounded-xl p-4 hover:scale-[1.02] transition-all duration-500"
          >
            <div
              class="w-10 h-10 rounded-xl bg-white/5 border border-white/10 flex items-center justify-center group-hover:scale-110 transition-transform duration-500"
            >
              <i class="fab fa-github text-[#f0f0f0] text-sm"></i>
            </div>
            <div>
              <div class="text-xs text-[#555] mb-0.5">GitHub</div>
              <div
                class="text-sm text-[#f0f0f0] font-medium group-hover:text-white transition-colors"
              >
                programmer-nick234
              </div>
            </div>
          </a>
        </div>

        <!-- Decorative element -->
        <div class="hidden lg:block pt-4">
          <div class="glass-card rounded-xl p-5 text-center">
            <div class="text-3xl mb-2">ðŸš€</div>
            <p class="text-xs text-[#555] leading-relaxed">
              Currently open to freelance projects and collaboration
              opportunities
            </p>
          </div>
        </div>
      </div>

      <!-- Right: Contact Form -->
      <div class="lg:col-span-3" data-animate="fade-left">
        <form
          id="contact-form"
          class="glass-card rounded-2xl p-6 sm:p-8 space-y-5"
          action="https://formspree.io/f/YOUR_FORM_ID"
          method="POST"
        >
          <!-- Name -->
          <div class="form-group relative">
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full bg-white/[0.03] border border-white/10 rounded-xl px-4 py-3.5 text-sm text-[#f0f0f0] placeholder-transparent focus:border-[#00f5ff]/50 focus:bg-white/[0.05] focus:outline-none focus:ring-0 transition-all duration-400 peer"
              placeholder="Your Name"
            />
            <label
              for="name"
              class="absolute left-4 top-3.5 text-sm text-[#555] transition-all duration-300 peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-sm peer-focus:top-[-8px] peer-focus:text-xs peer-focus:text-[#00f5ff] peer-focus:bg-[#0d0d0d] peer-focus:px-2 peer-[:not(:placeholder-shown)]:top-[-8px] peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:bg-[#0d0d0d] peer-[:not(:placeholder-shown)]:px-2 cursor-text"
            >
              Your Name
            </label>
          </div>

          <!-- Email -->
          <div class="form-group relative">
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-white/[0.03] border border-white/10 rounded-xl px-4 py-3.5 text-sm text-[#f0f0f0] placeholder-transparent focus:border-[#00f5ff]/50 focus:bg-white/[0.05] focus:outline-none focus:ring-0 transition-all duration-400 peer"
              placeholder="Email Address"
            />
            <label
              for="email"
              class="absolute left-4 top-3.5 text-sm text-[#555] transition-all duration-300 peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-sm peer-focus:top-[-8px] peer-focus:text-xs peer-focus:text-[#00f5ff] peer-focus:bg-[#0d0d0d] peer-focus:px-2 peer-[:not(:placeholder-shown)]:top-[-8px] peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:bg-[#0d0d0d] peer-[:not(:placeholder-shown)]:px-2 cursor-text"
            >
              Email Address
            </label>
          </div>

          <!-- Subject -->
          <div class="form-group relative">
            <input
              type="text"
              id="subject"
              name="subject"
              class="w-full bg-white/[0.03] border border-white/10 rounded-xl px-4 py-3.5 text-sm text-[#f0f0f0] placeholder-transparent focus:border-[#00f5ff]/50 focus:bg-white/[0.05] focus:outline-none focus:ring-0 transition-all duration-400 peer"
              placeholder="Subject"
            />
            <label
              for="subject"
              class="absolute left-4 top-3.5 text-sm text-[#555] transition-all duration-300 peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-sm peer-focus:top-[-8px] peer-focus:text-xs peer-focus:text-[#00f5ff] peer-focus:bg-[#0d0d0d] peer-focus:px-2 peer-[:not(:placeholder-shown)]:top-[-8px] peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:bg-[#0d0d0d] peer-[:not(:placeholder-shown)]:px-2 cursor-text"
            >
              Subject (Optional)
            </label>
          </div>

          <!-- Message -->
          <div class="form-group relative">
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full bg-white/[0.03] border border-white/10 rounded-xl px-4 py-3.5 text-sm text-[#f0f0f0] placeholder-transparent focus:border-[#00f5ff]/50 focus:bg-white/[0.05] focus:outline-none focus:ring-0 transition-all duration-400 peer resize-none"
              placeholder="Your Message"></textarea>
            <label
              for="message"
              class="absolute left-4 top-3.5 text-sm text-[#555] transition-all duration-300 peer-placeholder-shown:top-3.5 peer-placeholder-shown:text-sm peer-focus:top-[-8px] peer-focus:text-xs peer-focus:text-[#00f5ff] peer-focus:bg-[#0d0d0d] peer-focus:px-2 peer-[:not(:placeholder-shown)]:top-[-8px] peer-[:not(:placeholder-shown)]:text-xs peer-[:not(:placeholder-shown)]:bg-[#0d0d0d] peer-[:not(:placeholder-shown)]:px-2 cursor-text"
            >
              Your Message
            </label>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="group relative w-full py-3.5 rounded-xl font-semibold text-sm overflow-hidden transition-all duration-500"
            data-magnetic="0.15"
            style="background: linear-gradient(135deg, rgba(0, 245, 255, 0.1), rgba(168, 85, 247, 0.1)); border: 1px solid rgba(0, 245, 255, 0.2);"
          >
            <div
              class="absolute inset-0 bg-gradient-to-r from-[#00f5ff] to-[#a855f7] opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >
            </div>
            <span
              class="relative z-10 text-[#00f5ff] group-hover:text-[#050505] transition-colors duration-500 flex items-center justify-center gap-2"
            >
              <span>Send Message</span>
              <i
                class="fas fa-paper-plane text-xs group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform duration-500"
              ></i>
            </span>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  #contact-form {
    position: relative;
  }

  #contact-form::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 16px;
    padding: 1px;
    background: linear-gradient(
      135deg,
      transparent,
      rgba(0, 245, 255, 0.1),
      transparent,
      rgba(168, 85, 247, 0.1),
      transparent
    );
    background-size: 300% 300%;
    -webkit-mask: linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    animation: gradientShift 6s ease infinite;
    pointer-events: none;
  }

  #contact-form input:focus,
  #contact-form textarea:focus {
    box-shadow: 0 0 0 1px rgba(0, 245, 255, 0.3),
      0 0 15px rgba(0, 245, 255, 0.08);
  }

  .form-group {
    position: relative;
  }
</style>
