---
// Projects section component
const projects = [
  {
    title: "Subreddit Finder",
    description: "Always find the best subreddit for your query",
    image: "https://images.unsplash.com/photo-1611224923853-80b023f02d71?w=400&h=250&fit=crop",
    tech: ["Next.js", "TypeScript", "TailwindCSS", "Gemini 2.0 Flash"],
    date: "March 2025",
    link: "#",
    github: "#"
  },
  {
    title: "Tatva - Know your Geography",
    description: "Explore countries interactively with real-time search and rich visuals. Built this for levels.fyi",
    image: "https://images.unsplash.com/photo-1488746473535-4e4b3b3b3b3b?w=400&h=250&fit=crop",
    tech: ["Next.js", "TypeScript", "TailwindCSS"],
    date: "August 2024",
    link: "#",
    github: "#"
  },
  {
    title: "Sankalp",
    description: "Event registration portal and dashboard, for all the events conducted by SOSC.",
    image: "https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=400&h=250&fit=crop",
    tech: ["Next.js", "TypeScript", "TailwindCSS", "MERN"],
    date: "December 2024",
    link: "#",
    github: "#"
  }
];
---

<section id="projects" class="py-16 bg-dark-card">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header with View More button -->
    <div class="flex justify-between items-center mb-10">
      <h2 class="text-3xl sm:text-4xl font-bold text-text-primary">
        <span class="text-neon-cyan">Projects</span>
      </h2>
      <button class="flex items-center text-text-secondary hover:text-neon-cyan transition-colors duration-300 group">
        <span class="mr-2">View More</span>
        <i class="fas fa-chevron-down group-hover:translate-y-1 transition-transform duration-300"></i>
      </button>
    </div>

    <!-- Projects List -->
    <div class="space-y-6">
      {projects.map((project) => (
        <div class="group bg-dark-bg border border-dark-border rounded-lg p-5 hover:border-neon-cyan transition-all duration-300">
          <div class="flex flex-col lg:flex-row gap-5">
            <!-- Project Info -->
            <div class="flex-1">
              <h3 class="text-xl font-bold text-text-primary mb-2 group-hover:text-neon-cyan transition-colors duration-300">
                {project.title}
              </h3>
              <p class="text-text-secondary text-base mb-3">
                {project.description}
              </p>
              
              <!-- Tech Stack -->
              <div class="flex flex-wrap gap-2 mb-3">
                {project.tech.map((tech) => (
                  <span class="px-2 py-1 bg-gray-200 text-gray-800 rounded text-xs font-medium">
                    {tech}
                  </span>
                ))}
              </div>
              
              <!-- Date and Links -->
              <div class="flex items-center justify-between">
                <span class="text-text-muted text-xs">
                  {project.date}
                </span>
                <div class="flex gap-3">
                  <a
                    href={project.github}
                    class="text-text-secondary hover:text-neon-cyan transition-colors duration-300"
                    title="View Code"
                  >
                    <i class="fas fa-code text-base"></i>
                  </a>
                  <a
                    href={project.link}
                    class="text-text-secondary hover:text-neon-cyan transition-colors duration-300"
                    title="View Project"
                  >
                    <i class="fas fa-external-link-alt text-base"></i>
                  </a>
                </div>
              </div>
            </div>
            
            <!-- Project Preview Image -->
            <div class="lg:w-64 lg:h-40 flex-shrink-0">
              <div class="w-full h-full bg-white rounded-lg overflow-hidden shadow-lg">
                <img
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
