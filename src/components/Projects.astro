---
// Projects section component - Optimized
const projects = [
  {
    id: "hisab-prox",
    title: "HisabProX",
    description: "A smart financial management and budget-tracking solution with data analytics for expense insights.",
    tech: ["React", "Node.js", "MongoDB", "Chart.js", "Express"],
    date: "2025",
    status: "active"
  },
  {
    id: "focus-fusion",
    title: "Focus Fusion",
    description: "A productivity app combining music transformation and concentration tools to enhance study sessions.",
    tech: ["React Native", "JavaScript", "Audio APIs", "Firebase"],
    date: "2025",
    status: "active"
  },
  {
    id: "ssosc-web",
    title: "SSOSC Web",
    description: "A modern, secure web platform built for streamlined organizational communication and collaboration.",
    tech: ["Next.js", "TypeScript", "TailwindCSS", "Prisma"],
    date: "2025",
    status: "finished"
  },
  {
    id: "scatch",
    title: "SCATCH",
    description: "A creative project focused on integrating AI with interactive design and scalable solutions.",
    tech: ["Python", "TensorFlow", "React", "FastAPI"],
    date: "2025",
    status: "finished"
  },
  {
    id: "unity-2",
    title: "Unity 2.0",
    description: "An upgraded system/project emphasizing collaboration, next-gen features, and optimized performance for real-world use.",
    tech: ["Vue.js", "Node.js", "PostgreSQL", "Docker"],
    date: "2025",
    status: "finished"
  }
];

// Status configuration for better maintainability
const statusConfig: Record<string, { color: string; text: string; animate: string }> = {
  active: { color: "bg-neon-cyan", text: "Active Project", animate: "animate-pulse" },
  finished: { color: "bg-green-500", text: "Project Finished", animate: "" },
  ended: { color: "bg-red-500", text: "Project Ended", animate: "" }
};
---

<section id="projects" class="py-6 sm:py-8 bg-dark-card overflow-hidden px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto w-full">
    <!-- Optimized Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 sm:mb-10 gap-4">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-text-primary">
        <span class="text-neon-cyan">Projects</span>
      </h2>
      <button 
        class="flex items-center text-text-secondary hover:text-neon-cyan transition-colors duration-300 group text-sm sm:text-base"
        aria-label="View more projects"
      >
        <span class="mr-2">View More</span>
        <i class="fas fa-chevron-down group-hover:translate-y-1 transition-transform duration-300" aria-hidden="true"></i>
      </button>
    </div>

    <!-- Optimized Projects Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8">
      {projects.map((project) => {
        const status = statusConfig[project.status];
        return (
                     <article 
             class="group relative bg-dark-bg border border-dark-border rounded-xl p-4 sm:p-6 hover:border-neon-cyan transition-all duration-500 overflow-hidden will-change-transform w-full"
             id={project.id}
           >
            <!-- Optimized Spotlight Effect -->
            <div class="absolute inset-0 bg-gradient-to-br from-neon-cyan/5 via-transparent to-neon-purple/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
            
            <!-- Project Content -->
            <div class="relative z-10">
              <!-- Optimized Project Header -->
              <header class="flex items-start justify-between mb-3 sm:mb-4">
                <h3 class="text-lg sm:text-xl font-bold text-text-primary group-hover:text-neon-cyan transition-colors duration-300">
                  {project.title}
                </h3>
                <time 
                  datetime={project.date}
                  class="text-neon-cyan text-xs font-medium bg-neon-cyan/10 px-2 py-1 rounded-full flex-shrink-0"
                >
                  {project.date}
                </time>
              </header>
              
              <!-- Project Description -->
              <p class="text-text-secondary text-xs sm:text-sm mb-3 sm:mb-4 leading-relaxed">
                {project.description}
              </p>
              
                             <!-- Optimized Tech Stack -->
               <div class="flex flex-wrap gap-1 sm:gap-2 mb-3 sm:mb-4">
                 {project.tech.map((tech) => (
                   <span 
                     class="px-2 sm:px-3 py-1 bg-dark-card border border-dark-border text-neon-cyan text-xs font-medium rounded-full group-hover:border-neon-cyan transition-all duration-300"
                   >
                     {tech}
                   </span>
                 ))}
               </div>
              
                             <!-- Optimized Project Status -->
               <footer class="flex items-center pt-4 border-t border-dark-border">
                 <div class="flex items-center space-x-2">
                   <div class={`w-2 h-2 ${status.color} rounded-full ${status.animate}`}></div>
                   <span class="text-text-muted text-xs">{status.text}</span>
                 </div>
               </footer>
            </div>
            
            <!-- Optimized Hover Glow Effect -->
            <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-neon-cyan/20 via-transparent to-neon-purple/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-xl pointer-events-none"></div>
          </article>
        );
      })}
    </div>
  </div>
</section>
