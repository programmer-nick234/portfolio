                </div>
                
                <!-- Content -->
                <div class="flex-1 bg-dark-card border border-dark-border rounded-xl p-3 sm:p-4 group-hover:border-neon-cyan transition-all duration-300">
                  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-2 gap-1 sm:gap-0">
                    <h4 class="text-sm sm:text-base font-semibold text-text-primary group-hover:text-neon-cyan transition-colors duration-300">
                      {item.title}
                    </h4>
                    <span class="text-xs text-neon-cyan font-medium bg-neon-cyan/10 px-2 py-1 rounded-full w-fit">
                      {item.period}
                    </span>
                  </div>
                  <p class="text-neon-purple font-medium mb-2 text-xs sm:text-sm">
                    {item.company}
                  </p>
                  <p class="text-text-secondary text-xs sm:text-sm leading-relaxed">
