---
const navItems = [
  { name: 'Now', href: '/now', icon: 'fas fa-clock' },
  { name: 'Blog', href: '/blog', icon: 'fas fa-palette' },
  { name: 'Uses', href: '/uses', icon: 'fas fa-cog' },
  { name: 'My Reads', href: '/books', icon: 'fas fa-book' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-gradient-to-r from-black/20 via-gray-900/30 to-black/20 backdrop-blur-xl border-b border-white/10 shadow-2xl">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Left Side: Panda Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="group relative">
          <div class="absolute inset-0 bg-gradient-to-r from-neon-cyan/20 to-neon-purple/20 rounded-full blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <img 
            src="/navbar.png" 
            alt="Panda Logo" 
            class="relative w-14 h-14 object-contain hover:scale-125 transition-all duration-500 hover:rotate-12 drop-shadow-lg"
          />
        </a>
      </div>

      <!-- Right Side: All Navigation Icons -->
      <div class="hidden md:flex items-center space-x-4">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-text-secondary hover:text-neon-cyan p-2 rounded-lg transition-colors duration-300"
          >
            <i class={`${item.icon} text-xl`}></i>
          </a>
        ))}
      </div>

             <!-- Mobile menu button -->
       <div class="md:hidden">
         <button
           id="mobile-menu-button"
           class="text-text-secondary hover:text-neon-cyan focus:outline-none focus:text-neon-cyan transition-colors duration-300 p-2"
         >
           <i class="fas fa-bars text-xl"></i>
         </button>
       </div>
    </div>
  </div>

                       <!-- Mobile Navigation -->
     <div id="mobile-menu" class="hidden md:hidden bg-dark-card border-t border-dark-border">
       <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
         {navItems.map((item) => (
           <a
             href={item.href}
             class="text-text-secondary hover:text-neon-cyan block px-3 py-2 rounded-md text-base font-medium transition-colors duration-300 flex items-center space-x-3"
           >
             <i class={`${item.icon} text-lg`}></i>
             <span>{item.name}</span>
           </a>
         ))}
       </div>
     </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
      
      // Change icon
      const icon = mobileMenuButton.querySelector('i');
      if (icon) {
        if (mobileMenu.classList.contains('hidden')) {
          icon.className = 'fas fa-bars text-xl';
        } else {
          icon.className = 'fas fa-times text-xl';
        }
      }
    });
  }

  // Close mobile menu when clicking on a link
  document.querySelectorAll('#mobile-menu a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
      const icon = mobileMenuButton?.querySelector('i');
      if (icon) {
        icon.className = 'fas fa-bars text-xl';
      }
    });
  });

</script>

<style>
  /* Disable all tooltips */
  [title] {
    position: relative;
  }
  
  [title]:hover::after,
  [title]:hover::before {
    display: none !important;
  }
  
  /* Disable browser default tooltips */
  * {
    -webkit-tooltip: none;
    tooltip: none;
  }
  
  /* Ensure no tooltips show */
  nav a[title]:hover::after,
  nav a[title]:hover::before,
  nav button[title]:hover::after,
  nav button[title]:hover::before {
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
  }
  
  /* Remove focus outline/box when clicking */
  nav a:focus,
  nav button:focus,
  nav a:focus-visible,
  nav button:focus-visible {
    outline: none !important;
    box-shadow: none !important;
    border: none !important;
  }
  
  /* Remove any focus styles */
  nav *:focus {
    outline: none !important;
    box-shadow: none !important;
    border: none !important;
  }
</style>
